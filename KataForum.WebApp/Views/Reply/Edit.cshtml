@model KataForum.WebApp.Models.Reply.PostReplyViewModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeader">
            Ответ | @Model.PostTitle
        </div>
        <span id="headingBtn">
            <a asp-controller="Post" asp-action="Index" asp-route-id="@Model.PostId" class="btn btn-back">Вернуться обратно</a>
        </span>
    </div>
    <div class="row">
        <div id="postReply">
            <h3>
                @Model.PostTitle
            </h3>
            <p>
                @Model.PostContent
            </p>
        </div>
    </div>
    <div class="row">
        <div id="createReply">
            <div class="authorBlock">   
                Отправляете как @Model.AuthorName
            </div>
            
            <form asp-controller="Reply" asp-action="AddReply" method="post" id="addPostForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ReplyContent">Изменить: </label>
                    <textarea asp-for="ReplyContent" rows="20" class="form-control" placeholder="Your reply..."></textarea>
                    <span asp-validation-for="ReplyContent" class="text-danger"></span>
                </div>
                <button type="submit" id="submitPostBtn" class="btn btn-submitPost">Изменить</button>
                <input asp-for="AuthorId" type="hidden">
                <input asp-for="PostId" type="hidden">
                <input asp-for="ForumId" type="hidden">
            </form>
        </div>    
    </div>
</div>
